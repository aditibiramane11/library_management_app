<div class="container">
  <div class="row">
  	<div class="col-md-3"></div>
  	<div class="col-md-6">
    <h3 class="my-3">Author Listing</h3>

    <% @authors.each do |author| %>
      <div class="card mb-2">
        <div class="card-body">
          <h4 class="card-title"> <%=link_to 'Author name:',author_path(author)%> <%=author.first_name %> <%=  author.last_name%></h4>
          <p>Date of Birth: <%= author.date_of_birth %></p>
        </div>
      </div>
    <% end %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
