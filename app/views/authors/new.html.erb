<div class="card-body">
  <div class="container">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
    <h3>Add Author</h3>
  <%= form_with model: @author do |f|%>
  <div>
       <%= f.label :First_Name %><br>
       <%= f.text_field :first_name, class: "form-control"  %><br>
       <%= f.label :Last_Name %><br>
       <%= f.text_field :last_name, class: "form-control"  %><br>
       <%= f.label :Date_of_Birth %><br>
       <%= f.date_field :date_of_birth, class: "form-control"  %><br>

    </div>
    <div>
       <%= f.submit class:"btn btn-outline-success" %>
    </div>
  <% end %>
</div>
<div class="col-md-3"></div>
</div>
</div>
